{
  "manifest_version": 2,
  "name": "doRSS",
  "description": "Preview and subscribe to feeds in the browser",
  "version": "1.0",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "short_name": "doRSS",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "js": [
      "content.js"
    ]
  }],
  "page_action": {
    "default_title": "Subscribe to the feed",
    "default_icon": "icons/icon-512.png"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  }
}
